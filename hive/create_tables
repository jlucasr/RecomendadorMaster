
CREATE DATABASE IF NOT EXISTS practica;

use practica;

CREATE EXTERNAL TABLE IF NOT EXISTS clientes
(id INT, sexo STRING, edad INT, pais STRING, fecha_registro STRING)
PARTITIONED BY (fecha_procesado STRING)
ROW FORMAT DELIMITED 
FIELDS TERMINATED BY '\t'
LINES TERMINATED BY '\n'
STORED AS TEXTFILE;

CREATE EXTERNAL TABLE IF NOT EXISTS eventos
( userid INT , time_reprod STRING,artid STRING, artname STRING, trackid STRING, tackname STRING )
PARTITIONED BY (fecha_procesado STRING)
ROW FORMAT DELIMITED
FIELDS TERMINATED BY '\t'
LINES TERMINATED BY '\n'
STORED AS TEXTFILE;

